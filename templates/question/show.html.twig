{% extends 'base.html.twig' %}
{% block title %}
    Question!
{% endblock %}
{% block body %}
    <h1>{{ question }}</h1>

    <div>
        we'll print the whole question here !
    </div>

    <h2> ANSWERS ({{ answers|length }})</h2>
    <ul>
        {% for answer in answers %}
            <li>{{ answer }}</li>
        {% endfor %}
    </ul>
{% endblock %}